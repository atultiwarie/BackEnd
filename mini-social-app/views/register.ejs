<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-6 font-sans">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Welcome, <%= user.name %> üëã</h1>
            <a href="/logout"
                class="text-red-600 font-medium border border-red-600 px-4 py-2 rounded hover:bg-red-600 hover:text-white transition">
                Logout
            </a>
        </div>

        <!-- Post Creation Form -->
        <div class="bg-white p-6 rounded-xl shadow-md mb-8">
            <form action="/posts" method="POST">
                <textarea name="content" rows="3" placeholder="What's on your mind?"
                    class="resize-none outline-none w-full border border-gray-300 p-4 rounded-lg" required></textarea>
                <button type="submit"
                    class="mt-4 px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                    Post
                </button>
            </form>
        </div>

        <!-- User's Posts -->
        <div class="bg-white p-6 rounded-xl shadow-md">
            <h2 class="text-xl font-semibold mb-4">Your Posts</h2>

            <% if (posts.length> 0) { %>
                <% posts.forEach(post=> { %>
                    <div class="bg-gray-50 p-4 rounded-lg mb-4 shadow">
                        <div class="flex justify-between items-center mb-1">
                            <h3 class="font-semibold text-lg">
                                <%= post.user.username %>
                            </h3>
                            <% if (post.user._id.toString()===user._id.toString()) { %>
                                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="text-red-500 hover:underline text-sm">Delete</button>
                                </form>
                                <% } %>
                        </div>
                        <p class="text-gray-800">
                            <%= post.content %>
                        </p>
                        <p class="text-sm text-gray-500 mt-1">‚ù§Ô∏è Likes: <%= post.likes.length %>
                        </p>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-center text-gray-600">You haven't posted anything yet.</p>
                            <% } %>
        </div>
    </div>
</body>

</html>