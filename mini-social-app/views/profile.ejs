<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-6 font-sans">
    <div class="max-w-3xl mx-auto">
        <!-- Top Navigation Bar -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Welcome, <%= user.name %> üëã</h1>
            <a href="/logout"
                class="text-red-600 font-medium border border-red-600 px-4 py-2 rounded hover:bg-red-600 hover:text-white transition">
                Logout
            </a>
        </div>

        <!-- Post Creation Form -->
        <div class="bg-white p-6 rounded-xl shadow-md mb-8">
            <form action="/posts" method="POST">
                <textarea name="content" rows="3" placeholder="What's on your mind?"
                    class="resize-none outline-none w-full border border-gray-300 p-4 rounded-lg" required></textarea>
                <button type="submit"
                    class="mt-4 px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
                    Post
                </button>
            </form>
        </div>
        <!-- User's Posts List -->
        <% if (user.posts.length> 0) { %>
            <% user.posts.reverse().forEach(post=> { %>
                <div class="bg-white p-5 rounded-xl shadow-sm mb-5">
                    <div class="flex justify-between items-center mb-2">
                        <h2 class="text-lg font-semibold">
                            <%= post.user.username %>
                        </h2>
                        <% if (post.user._id.toString()===user._id.toString()) { %>
                                <a href="/posts/delete/<%= post._id %>" class="text-red-500 hover:underline text-sm">
                                    Delete
                                </a>
                            <% } %>
                    </div>
                    <p class="text-gray-800 mb-2">
                        <%= post.content %>
                    </p>
                    <small class="text-sm block text-gray-500">
                        Likes: <%= post.likes.length %>‚ù§Ô∏è
                    </small>
                    <a href="posts/like/<%= post._id %>" class="text-blue-500 hover:underline text-sm">
                       <%= post.likes.indexOf(user._id) === -1 ? 'Like' : 'Unlike' %>
                    </a>
                    <span class="text-gray-400 text-sm ml-2">
                        <a href="/edit/<%= post._id %>" class="text-blue-500 hover:underline text-sm">Edit</a>
                    </span>
                </div>
                <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-600">You haven't posted anything yet.</p>
                        <% } %>



    </div>
</body>

</html>